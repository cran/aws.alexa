citHeader("To cite package 'aws.alexa' in publications use:")
     
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)
 
citEntry(entry="Manual",
		  title = "aws.alexa: R Client for the Amazon Alexa Web Information Services API.",
		  author = personList(as.person("Gaurav SOod")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Gaurav Sood (",
				year,
				"). aws.alexa: R Client for the Amazon Alexa Web Information Services API.",
				vers, ".", sep=""))